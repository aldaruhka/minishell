{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc сборка активного файла",
            "command": "/usr/local/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "minishell.c",
                "initialization.c",
                "lexer.c",
                "parser.c",
                "programm_part.c",
                "envp_functions.c",
                "echo.c",
                "-lreadline",
                "libft/libft.a",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}